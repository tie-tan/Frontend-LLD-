import { StyleSheet, Text, View, TextInput } from 'react-native';
import { useState, useEffect } from 'react';


export default function App() {

  const [value, setvalue] = useState("");
  const [posts, setposts] = useState([]);
  const [suggest, setsuggest] = useState([]);

  useEffect(() => {
    fetch("https://jsonplaceholder.typicode.com/todos")
      .then(res => res.json())
      .then(data => setposts(data));
  }, []);


  const handletype = (text) => {
    setvalue(text)
    const x = posts.filter(ele =>ele.title.toLowerCase().startsWith(value.toLowerCase()))
    setsuggest(x);
  }

// highlight the selcted text function not need if not asked
  const highlightText = (title, query) => {
    if (!query) return <Text>{title}</Text>;

    const start = title.toLowerCase().indexOf(query.toLowerCase());
    if (start === -1) return <Text>{title}</Text>;

    const end = start + query.length;

    return (
      <Text>
        <Text>{title.slice(0, start)}</Text>
        <Text style={{ color: 'blue' }}>
          {title.slice(start, end)}
        </Text>
        <Text>{title.slice(end)}</Text>
      </Text>
    );
  };

 return (
    <View style={styles.container}> 
        <TextInput 
          value={value}
          onChangeText={handletype}
          style={{borderWidth: 2, padding: 10, fontSize: 18}}
          placeholder={"Search....."}
        />
        <View style={{maxheight: 300, borderWidth: 1, overflow: 'scroll'}}>
        {
          suggest.map((ele,ind)=>(
            <Text key={ind} style={styles.text} onPress={() => handletype(ele.title)}>
              {highlightText(ele.title, value)} // u can write {ele.title}
            </Text>
          ))
        }
        </View>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    marginTop: 100,
    marginHorizontal: 30,
  },
  text: {
    fontSize: 18,
    margin: 3,
  },
  
});




// advance version use useMemo hook  use deboucne + useMemo

useEffect(() => {
    const timer = setTimeout(() => {
      setDebouncedValue(value);
    }, 300); 

    return () => clearTimeout(timer);
  }, [value]);

  // ðŸ”¹ memoized suggestions
  const suggestions = useMemo(() => {
    if (!debouncedValue) return [];

    return posts.filter(ele =>
      ele.title.toLowerCase().startsWith(debouncedValue.toLowerCase())
    );
  }, [debouncedValue, posts]);
